= render 'stripe_scripts'
%section.register.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for(@user, html: { id: 'payment-form' }, layout: :horizontal, label_col: 'col-sm-2', control_col: 'col-sm-6') do |f|
        %header
          %h1 Register
        = render 'email_and_password_fields', f: f
        = hidden_field_tag :invite_token, @invite_token
        = render 'credit_card_fields', f: f
        %fieldset.actions.control-group.col-sm-offset-2
          .controls
            = f.submit "Sign Up"
