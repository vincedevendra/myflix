= content_for :head do
  %script(type="text/javascript" src="https://js.stripe.com/v2/")
  %script(type="text/javascript")
    Stripe.setPublishableKey('#{ENV['STRIPE_PUBLISHABLE_KEY']}');
  =javascript_include_tag 'payments'

%section.register.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for(@user, html: { id: 'payment-form' }, layout: :horizontal, label_col: 'col-sm-2', control_col: 'col-sm-6') do |f|
        %header
          %h1 Register
        %fieldset
          = f.alert_message "Please fix the following problems:", error_summary: false
          = f.email_field :email, label: 'Email Address', value: @invite_email
          = f.password_field :password
          = f.password_field :password_confirmation, label: 'Confirm Password'
          = f.text_field :full_name, label: 'Full Name', value: @invite_name
          = hidden_field_tag :invite_token, @invite_token
        %fieldset.credit_card
          .alert.alert-danger.payment-alert.hidden
            %span.payment-errors
          = f.text_field :cc_number, tag: true, label: "Credit Card Number", data: { stripe: 'number' }
          = f.text_field :sec_code, tag: true, label: "Security Code", data: { stripe: 'cvc' }
          .form-group
            %label.control-label.col-sm-2 Expiration
            .col-sm-3
              = select_month(Date.today, {add_month_numbers: true}, name: nil,  class: 'form-control', "data-stripe" => "exp-month", id: 'exp-month')
            .col-sm-2
              = select_year(Date.today.year, {start_year: Date.today.year, end_year: Date.today.year + 4}, name: nil, class: 'form-control', "data-stripe" => "exp-year", id: 'exp-year')
        %fieldset.actions.control-group.col-sm-offset-2
          .controls
            = f.submit "Sign Up"
