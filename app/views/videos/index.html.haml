- @categories.each do |category|
  - if category.videos.any?
    %article.video_category
      %header
        %h3= link_to category.title, category_path(category)
      .videos.row
        - category.recent_videos.each do |video|
          .video.col-sm-2
            = link_to video_path(video) do
              %img{src: video.small_cover_url}

