%section.my_queue.container
  .row
    .col-sm-10.col-sm-offset-1
      %article
        %header
          %h2 My Queue
        - if @videos.any?
          %table.table
            %thead
              %tr
                %th(width="10%") List Order
                %th(width="30%") Video Title
                %th(width="10%") Play
                %th(width="20%") Rating
                %th(width="15%") Genre
                %th(width="15%") Remove
            %tbody
              - @videos.each do |video|
                %tr
                  %td
                    %input.form-control(type="text" value="1")
                  %td
                    = link_to video.title, video
                  %td
                    = button_to "Play", nil, class: "btn btn-default"
                  %td
                    = video.average_rating
                  %td
                    = link_to video.category.title, video.category
                  %td
                    = link_to "", method: :post do
                      %i.glyphicon.glyphicon-remove
          = button_to "Update Instant Queue", nil, class: "btn btn-default"
        - else
          %h3 You haven't added any videos to your queue yet.
